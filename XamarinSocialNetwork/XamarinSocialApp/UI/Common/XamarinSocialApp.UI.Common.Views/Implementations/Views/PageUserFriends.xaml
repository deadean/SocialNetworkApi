<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinSocialApp.UI.Common.Views.Implementations.Views.PageUserFriends"
						 BackgroundImage="background2.png" >

	<Grid Padding="10">

		<Grid.RowDefinitions>
			<RowDefinition Height="40" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Label Text="Мои друзья" FontSize="22" Grid.Row="0" XAlign="Center" FontAttributes="Bold" />

		<ListView Grid.Row="1" ItemsSource="{Binding Friends}" SelectedItem="{Binding SelectedFriend, Mode=TwoWay}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal" >
							<Image Source="{Binding UserPhoto}" />
							<Label Text="{Binding FirstName}" FontSize="16" VerticalOptions="Center" />
							<Label Text="{Binding LastName}"  FontSize="16" VerticalOptions="Center" />
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		<ActivityIndicator Grid.Row="1"
												 IsRunning="{Binding IsBusy}"
												 IsVisible ="{Binding IsBusy}"
												 WidthRequest="50"
												 HeightRequest="50"
												 VerticalOptions="Center"
												 HorizontalOptions="Center"/>


	</Grid>
	
	
	
</ContentPage>